#!/bin/bash

set -x

# Development: root of the sources
SCRIPTPATH="$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"
ENDORSE_SRC_ROOT="$SCRIPTPATH/../.."
# suppose we are in SCRIPTPATH


workdir="/storage/projects/flow123d/Bukov2/20240102175607_3d_model_D02/"

# prepare inputs
cp ${workdir}/config.yaml ${workdir}/config_sim.yaml
cp ${SCRIPTPATH}/3d_model/Bukov2_mesh.yaml ${workdir}
cp ${SCRIPTPATH}/3d_model/simulation_mesh.vtu ${workdir}


source ${ENDORSE_SRC_ROOT}/venv_bayes/bin/activate

time python3 collect_hdf.py ${workdir}
time python3 sobol_data.py ${workdir} True
time python3 borehole_data.py ${workdir}

