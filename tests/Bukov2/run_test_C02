#!/bin/bash

set -x

# Development: root of the sources
SCRIPTPATH="$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"
ENDORSE_SRC_ROOT="$SCRIPTPATH/../.."

# input
# debug=false
output_dir="$ENDORSE_SRC_ROOT/tests/sandbox/2d_model_C02"

# prepare inputs
mkdir -p ${output_dir}/common_files
cp ${SCRIPTPATH}/2d_model/C02_hm_tmpl.yaml ${output_dir}/common_files
cp ${SCRIPTPATH}/2d_model/tunnel2d_fine.geo ${output_dir}/common_files
cp ${SCRIPTPATH}/2d_model/config_sim_C02hm.yaml ${output_dir}/config.yaml

# make mesh
sif_image="${ENDORSE_SRC_ROOT}/endorse.sif"
sing_command="singularity exec -B ${ENDORSE_SRC_ROOT}:${ENDORSE_SRC_ROOT} ${sif_image}"
cd ${output_dir}/common_files
${sing_command} bash -c "gmsh -format msh2 -2 tunnel2d_fine.geo"

# call main script
${ENDORSE_SRC_ROOT}/bin/endorse-bukov -o ${output_dir}